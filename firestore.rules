rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fonction helper pour vérifier si l'utilisateur est admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Fonction helper pour vérifier si l'utilisateur est authentifié
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Fonction helper pour vérifier si c'est le propriétaire
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Collection users
    match /users/{userId} {
      // Les utilisateurs authentifiés peuvent lire tous les profils
      allow read: if isAuthenticated();
      // Les utilisateurs peuvent créer leur propre profil avec n'importe quel rôle lors de l'inscription
      allow create: if isAuthenticated() && isOwner(userId);
      // Les utilisateurs peuvent mettre à jour leur propre profil (sauf le rôle)
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      // Seuls les admins peuvent supprimer des utilisateurs
      allow delete: if isAdmin();
    }
    
    // Collection orders
    match /orders/{orderId} {
      // Les utilisateurs peuvent lire leurs propres commandes
      allow read: if isOwner(resource.data.userId) || isAdmin();
      // Les utilisateurs peuvent créer leurs propres commandes
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      // Seuls les admins peuvent mettre à jour ou supprimer les commandes
      allow update, delete: if isAdmin();
    }
    
    // Collection addresses
    match /addresses/{addressId} {
      // Les utilisateurs peuvent lire leurs propres adresses
      allow read: if isOwner(resource.data.userId) || isAdmin();
      // Les utilisateurs peuvent créer/modifier/supprimer leurs propres adresses
      allow create, update, delete: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
    
    // Collection products (lecture seule pour tous, écriture pour admin)
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Bloquer tous les autres accès
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
